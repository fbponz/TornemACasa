---
const {
  title = "Título por defecto",
  description = "Descripción no disponible",
  donations = "Sin datos de donaciones",
  legal = "Sin datos legales",
  damnified = "Sin damnificados registrados",
  goods = "Sin bienes adquiridos",
  deliveries = "Sin entregas registradas"
} = Astro.props;
---

<div class="w-full p-8 rounded-lg bg-white border border-gray-200 shadow-lg">
    <div class="mx-auto max-w-4xl text-center">
        <h1 class="text-4xl font-bold text-orange-600">{title}</h1>
        <p class="mt-4 text-lg text-gray-700">{description}</p>
    </div>
    <dl class="mt-10 max-w-3xl mx-auto space-y-6 text-gray-800">
        <div class="relative pl-10">
            <dt class="flex items-start font-semibold">
                <span class="w-6 h-6 mr-3 flex items-center justify-center bg-orange-500 text-white rounded-full font-bold">1</span>
                Gestión de Donaciones
            </dt>
            <dd class="mt-1 ml-9 text-sm">{donations}</dd>
        </div>
        <div class="relative pl-10">
            <dt class="flex items-start font-semibold">
                <span class="w-6 h-6 mr-3 flex items-center justify-center bg-orange-500 text-white rounded-full font-bold">2</span>
                Gestión Legal y Tributaria
            </dt>
            <dd class="mt-1 ml-9 text-sm">{legal}</dd>
        </div>
        <div class="relative pl-10">
            <dt class="flex items-start font-semibold">
                <span class="w-6 h-6 mr-3 flex items-center justify-center bg-orange-500 text-white rounded-full font-bold">3</span>
                Gestión de Damnificados
            </dt>
            <dd class="mt-1 ml-9 text-sm">{damnified}</dd>
        </div>
        <div class="relative pl-10">
            <dt class="flex items-start font-semibold">
                <span class="w-6 h-6 mr-3 flex items-center justify-center bg-orange-500 text-white rounded-full font-bold">4</span>
                Gestión de Compras
            </dt>
            <dd class="mt-1 ml-9 text-sm">{goods}</dd>
        </div>
        <div class="relative pl-10">
            <dt class="flex items-start font-semibold">
                <span class="w-6 h-6 mr-3 flex items-center justify-center bg-orange-500 text-white rounded-full font-bold">5</span>
                Gestión de Entregas
            </dt>
            <dd class="mt-1 ml-9 text-sm">{deliveries}</dd>
        </div>
    </dl>
</div>
