---
const { title, content, imageUrl } = Astro.props;
---

<div class="max-w-sm rounded-lg overflow-hidden bg-gray-100 shadow-lg">
    <img class="w-full" src={imageUrl} alt={title} />
    <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">{title}</div>
        <p class="text-gray-700 text-base">
            {content}
        </p>
    </div>
</div>